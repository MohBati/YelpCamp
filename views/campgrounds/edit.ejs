<% layout('layouts/boilerplate') %>
    <h1>Edit Campground: <%= campground.title %></h1>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="campground[title]" value="<%= campground.title %>" required>
        </div>
        <div>
            <label for="location">Location:</label>
            <input type="text" id="location" name="campground[location]" value="<%= campground.location %>" required>
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="campground[description]" value="<%= campground.description %>"></textarea>
        </div>
        <button type="submit">Update Campground</button>
        <a href="/campgrounds/<%= campground._id %>">Back to campgrounds</a>
    </form>